}

@media (max-width: 501px){
    .container-fluid {
        padding: 20px;
    }

    .content {
        padding: 30px 20px;
        border-radius: 20px;
    }

    .img-fluid {
        max-width: 240px;
        margin-right: 0;
        margin-left: 0;
    }

    .form-floating h4 {
        font-size: 24px;
    }

    .card-item {
        display: flex;
        align-items: center;
        justify-content: center;
        max-width: 110px;
    }

    .card {
        padding: 14px 10px;
        min-height: 110px;
    }

    .img-card {
        width: 48px;
        height: 48px;
    }

    #img-teacher {
        width: 48px;
        height: 48px;
    }

    .card-subtitle {
        font-size: 11px;
        margin-top: 8px;
    }
}

@media (max-width: 301px){
    .container-fluid {
        padding: 30px;
        margin-top: 80px;
    }

    .img-fluid {
        margin-right: 0;
        margin-left: 0;
    }

    .card-item {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .cards {
      
    }
  
    .card-subtitle{
        font-size: 11px;
    }

    .card {
        max-width: 80px;
    }


}

@media (max-width: 235px){
    .container-fluid {
        padding: 30px;
        margin-top: 80px;
    }

    .img-fluid {
        margin-right: 0;
        margin-left: 0;
    }

    .card-item {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .cards {
        align: center;
    }
    .card {
        width: 4rem;
        margin-left: 10px;
    }
    .card-subtitle{
        font-size: 9px;
    }


}

a {
    color: inherit;
    text-decoration: none;
}

a:hover {
    text-decoration: none;
}
</style>
